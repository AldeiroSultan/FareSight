# Server environment variables
# Copy this file to .env and fill in your values

# Server configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000
SESSION_SECRET=your_very_secure_session_secret

# Database
DATABASE_URL=postgres://username:password@localhost:5432/flight_price_tracker

# Amadeus API credentials
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
AMADEUS_API_ENV=test # Use 'production' for production environment

# Email service (Resend)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=alerts@flightpricetracker.com

# JWT for additional security (used for password reset, etc.)
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1h

# Schedule settings (how often to check prices)
SCHEDULE_INTERVAL_MINUTES=60